# Backend Environment Variables Template
# Rename to .env and fill in your actual values

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-client-id
FIREBASE_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/...
FIREBASE_STORAGE_BUCKET=your-project.appspot.com

# API Keys
GRAPHHOPPER_API_KEY=your-graphhopper-api-key
GOOGLE_MAPS_API_KEY=optional-google-maps-key

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Database
FIRESTORE_DATABASE=main

# App Settings
APP_ENV=development
DEBUG=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,*

# Redis (optional)
REDIS_URL=redis://localhost:6379

# Deta (if deploying on Deta Space)
DETA_RUNTIME=false
